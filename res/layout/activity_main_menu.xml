<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:textAlignment="inherit"
    android:weightSum="100" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:clickable="true"
        android:onClick="exit_Clicked"
        android:src="@drawable/ic_action_cancel" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="35"
        android:gravity="bottom"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/logo_orig" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Anonymous chatting"
            android:textColor="#222222"
            android:textSize="@dimen/BackTextSize" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="23"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/AboutTextMargin"
        android:weightSum="100" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/AboutTextMargin"
            android:background="#222222"
            android:clickable="true"
            android:fadingEdge="horizontal"
            android:onClick="start_Clicked"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/MenuTextMargin"
            android:paddingTop="@dimen/MenuTextMargin"
            android:weightSum="100" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/AboutTextMargin"
                android:layout_weight="10"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_action_play_over_video" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="90"
                android:orientation="vertical"
                android:paddingRight="@dimen/AboutTextMargin" >

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Start"
                    android:textColor="#dedede"
                    android:textSize="@dimen/BackTextSize" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/AboutTextMargin"
            android:background="#222222"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/MenuTextMargin"
            android:paddingTop="@dimen/MenuTextMargin"
            android:weightSum="100"
            android:clickable="true"
            android:onClick="settings_Clicked" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/AboutTextMargin"
                android:layout_weight="10"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_action_settings" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="90"
                android:orientation="vertical"
                android:paddingRight="@dimen/AboutTextMargin" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Settings"
                    android:textColor="#dedede"
                    android:textSize="@dimen/BackTextSize" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/AboutTextMargin"
            android:background="#222222"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/MenuTextMargin"
            android:paddingTop="@dimen/MenuTextMargin"
            android:clickable="true"
            android:onClick="about_Clicked" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/AboutTextMargin"
                android:layout_weight="10"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ImageView02"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_action_about" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="90"
                android:orientation="vertical"
                android:paddingRight="@dimen/AboutTextMargin" >

                <TextView
                    android:id="@+id/onlineUsers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="About"
                    android:textColor="#dedede"
                    android:textSize="@dimen/BackTextSize" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <TextView
                android:id="@+id/users"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#222222"
                android:textSize="@dimen/CreditsTextSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" users online"
                android:textColor="#222222"
                android:textSize="@dimen/CreditsTextSize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <TextView
                android:id="@+id/chats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#222222"
                android:textSize="@dimen/CreditsTextSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" chats created"
                android:textColor="#222222"
                android:textSize="@dimen/CreditsTextSize" />

        </LinearLayout>

    </LinearLayout>
    
</LinearLayout>