<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:textAlignment="inherit"
    android:weightSum="100" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:background="#222222"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="back_Clicked"
            android:paddingLeft="@dimen/AboutTextMargin"
            android:src="@drawable/ic_action_backspace" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:gravity="center"
            android:paddingRight="@dimen/BackTextSize"
            android:text="About"
            android:textAlignment="gravity"
            android:textColor="#dedede"
            android:textSize="@dimen/BackTextSize"
            android:typeface="monospace" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/AboutTextMargin"
            android:background="#222222"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/AboutTextMargin" >

            <TextView
                android:id="@+id/users"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/AboutTextMargin"
                android:layout_marginRight="@dimen/AboutTextMargin"
                android:text="@string/about_text"
                android:textColor="#dedede"
                android:textSize="@dimen/AboutTextTextSize" />

            <ImageView
                android:id="@+id/time"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/AboutTextMargin"
                android:text="Ghost Chat 2013"
                android:textAlignment="gravity"
                android:textColor="#dedede"
                android:textSize="@dimen/AboutTextMargin" />

            <TextView
                android:id="@+id/credits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/app_credits"
                android:textAlignment="gravity"
                android:textColor="#dedede"
                android:textSize="@dimen/AboutTextMargin" />

        </LinearLayout>

    </LinearLayout>
    
</LinearLayout>